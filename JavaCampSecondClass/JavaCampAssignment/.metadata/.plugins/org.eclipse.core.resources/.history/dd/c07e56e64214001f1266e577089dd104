package methods;

public class Main {

	public static void main(String[] args) {
		searchNumber();

	}
	
	public static void searchNumber () {
		int [] numbers = new int[]{1,2,5,7,9,0};
		int search = 6;
		boolean isTrue = false;
		
		for (int number : numbers) {
			if(number == search) {
				isTrue = true;
				break;
			}
		}
		
		if (isTrue) {
			System.out.println("Number is valid in our list.");
		} else {
			System.out.println("Number is not valid in our list.");
		}
		
	}

}
