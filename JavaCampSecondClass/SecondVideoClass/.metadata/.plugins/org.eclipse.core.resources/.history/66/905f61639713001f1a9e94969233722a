package oop1;

public class Main {
	public static void main(String[] args) {
		// String message = "Price ratio: ";

		Product product1 = new Product();
		Product product2 = new Product();
		Product product3 = new Product();

		// These are coming from database in real life.
		// set value
		product1.name = "Eureka WhirlWind Bagless Canister 2.5L Vacuum Cleaner";
		product1.productId = "123456";
		product1.unitPrice = 69.99;
		product1.year = 2024;
		product1.rating = 4.7;
		product1.unitsInStock = 100;
		product1.discount = 17.00;
		product1.imageUrl = "EurekaWhirlWind.svg";

		product2.name = "Shark IX141 Pet Cordless Stick Vacuum ";
		product2.productId = "IX141";
		product2.unitPrice = 179.99;
		product2.year = 2024;
		product2.rating = 4.3;
		product2.unitsInStock = 70;
		product2.discount = 31.00;
		product2.imageUrl = "SharkIX141Pet.svg";

		product3.name = "BISSELL CleanView Rewind Upright Bagless Vacuum ";
		product3.productId = "3534";
		product3.unitPrice = 109.99;
		product3.year = 2024;
		product3.rating = 4.5;
		product3.unitsInStock = 120;
		product3.discount = 15.00;
		product3.imageUrl = "BISSELLCleanViewRewind.svg";

		Product[] products = { product1, product2, product3 };
		System.out.println("<ul>"); // it is coming from html codes. Nowadays developers are using library like react.
		
		// <ul> mean it will create list.
		// <il> means one of the list member.
		for (Product product : products) {
			System.out.println("<li>" + product.name + "</li>");
		}
		System.out.println("</ul>"); // bring data on the screen with using html.
		/*
		 * System.out.println(""); // get value System.out.println("Name: " +
