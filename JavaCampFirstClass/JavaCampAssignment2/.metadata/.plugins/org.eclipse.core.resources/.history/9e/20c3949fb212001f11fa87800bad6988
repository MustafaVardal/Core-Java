
public class Arrays {

	public static void main(String[] args) {
		
		/*
		String company1 = "Apple";
		String company2 = "Windows";
		String company3 = "Samsung";
		// We have a rule for that. Do not repeat yourself for clean code. DRY
		System.out.println(company1);
		System.out.println(company2);
		System.out.println(company3);*/
		
		
		String[] companies = new String[4];
		companies[0] = "Apple";
		companies[1] = "Windows";
		companies[2] = "Samsung";
		companies[3] = "IBM";
		//companies[4] = "Motorolla";
		// We will get exception error out of bounds array.
		for(int i =0; i < companies.length; i++) {
			System.out.println(companies[i]);
		}
		System.out.println("------------");
		for (String string : companies) {
			System.out.println(string);
		}
		
	}

}
